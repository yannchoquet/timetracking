<form method="post" action="{{ path(entity_name ~ '_delete', {'id': data.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.id) }}">
    <button class="button is-danger"><span class="icon is-medium"><i class="fas fa-trash-alt"></i></span><span>Delete</span></button>
</form>